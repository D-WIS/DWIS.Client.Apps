@page "/"



<PageTitle>DWIS Blackboard explorer</PageTitle>

<div style="width:100%; height:100%; display:flex" >
    @if (ShowQueryPage)
    {
        <QueryComponent></QueryComponent>    
    }
    else
    {
        <VariablesTreeView DrawerOpen="@DrawerOpen"/>            
    }
</div>

@code
{
    [Parameter]
    public bool DrawerOpen { get; set; }

    [Parameter]
    public bool ShowQueryPage { get; set; }
}
